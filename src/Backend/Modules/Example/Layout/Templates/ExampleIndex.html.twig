{% extends 'Layout/Templates/base.html.twig' %}
{% import 'Layout/Templates/macros.html.twig' as macro %}

{% block actionbar %}
  {% if showExampleExampleAdd %}
    <div class="btn-toolbar pull-right">
      <div class="btn-group" role="group">
        {{ macro.buttonIcon(geturl('ExampleAdd'), 'plus-square', 'lbl.Add'|trans|ucfirst) }}
      </div>
    </div>
  {% endif %}
{% endblock %}

{% block content %}
  {{ form_start(filter) }}
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="row">
        <div class="col-md-4">
          {{ form_row(filter.title, {'label': 'lbl.Title'}) }}
        </div>
        <div class="col-md-4">
          {{ form_row(filter.date, {'label': 'lbl.Date'}) }}
        </div>
        <div class="col-md-4">
          {{ form_row(filter.location, {'label': 'lbl.Location'}) }}
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <div class="btn-toolbar">
        <div class="btn-group pull-right">
          {{ macro.buttonIcon('', 'refresh', 'lbl.UpdateFilter'|trans|ucfirst, 'btn-primary', { "type":"submit", "id":"search", "name":"search" }) }}
        </div>
      </div>
    </div>
  </div>
  {{ form_end(filter) }}

  {{ macro.dataGrid(dataGrid) }}
{% endblock %}
